extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content 
    form(action="/admin/add-product" method="POST")

        div.form-group.row
            label(for="name").col-sm-2.col-form-label.mb-2 Product Name 
            div.col-sm-10 
                input.form-control#name(type="text"  name="name")

        div.form-group.row
            label(for="price").col-sm-2.col-form-label.mb-2 Price
            div.col-sm-10
                input.form-control#price(type="text"  name="price")
        
        div.form-group.row 
            label(for="imageUrl").col-sm-2.col-form-label.mb-2 Image
            div.col-sm-10
                input.form-control#imageUrl(type="text"  name="imageUrl")

        div.form-group.row 
            label(for="categoryId").col-sm-2.col-form-label.mb-2 Category
            div.col-sm-10
                select.form-control#categoryId(name="categoryId")
                    option(value="-1") Select Category 
                    each category in categories
                        option(value=`${category.id}`) #{category.name}

        div.form-group.row
            label(for="description").col-sm-2.col-form-label.mb-2 Description
            div.col-sm-10
                textarea.form-control#description(name="description" cols="30" rows="10")
        div.form-group.row.mt-2
            div.col-sm-10.offset-sm-2
                input.btn.btn-primary(type="submit"  value="Save Product")
